<h1>Edit People</h1>

<%= link_to "index", people_path %>

<%= form_for @person do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :gender %>
    <%= f.text_field :gender %>

    <%= f.label :hair_color %>
    <%= f.text_field :hair_color %>

    <%= f.label :eye_color %>
    <%= f.text_field :eye_color %>

    <%= f.label :age %>
    <%= f.text_field :age %>

    <%= f.label :alive %>
    <%= f.text_field :alive %>

    <%= f.submit %>
<% end %>